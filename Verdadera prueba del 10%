import random

# Clase para representar a un aventurero
class Aventurero:
    def __init__(self, nombre, vida, ataque, defensa):
        self.nombre = nombre
        self.vida = vida
        self.ataque = ataque
        self.defensa = defensa

    def atacar(self, objetivo):
        daño = max(0, self.ataque - objetivo.defensa)
        objetivo.vida -= daño
        print(f"{self.nombre} ataca a {objetivo.nombre} causando {daño} de daño.")

    def __str__(self):
        return f"{self.nombre} (Vida: {self.vida})"

# Función principal del juego
def iniciar_combate():
    # Crear dos aventureros
    aventurero1 = Aventurero("Zero", 100, 25, 10)
    aventurero2 = Aventurero("Omega", 80, 30, 5)

    # Turnos de combate
    turno = 1
    while aventurero1.vida > 0 and aventurero2.vida > 0:
        print(f"\n--- Turno {turno} ---")
        print(aventurero1)
        print(aventurero2)

        # Acción del aventurero 1
        print(f"\n{aventurero1.nombre}, elige tu acción:")
        print("1. Atacar")
        # Agregamos una opción de huir para el aventurero
        print("2. Huir")

        # Obtenemos la acción del aventurero 1
        accion = input("Selecciona una acción: ")
        if accion == "1":
            aventurero1.atacar(aventurero2)
        elif accion == "2":
            print(f"{aventurero1.nombre} ha huido del combate.")
            aventurero2.vida = 0 # Forzamos el fin del combate si el aventurero 1 huye
            break
        else:
            print("Acción inválida.")
            continue # Volver al inicio del bucle para que el jugador elija de nuevo

        # Acción del aventurero 2
        if aventurero2.vida > 0:
            print(f"\n{aventurero2.nombre} ataca a {aventurero1.nombre}.")
            aventurero2.atacar(aventurero1)

        # Verificar si la vida de alguno de los aventureros es 0 o menor
        if aventurero1.vida <= 0 or aventurero2.vida <= 0:
            break

        turno += 1

    # Mostrar el resultado del combate
    print("\n--- Fin del Combate ---")
    if aventurero1.vida <= 0:
        print(f"{aventurero2.nombre} ha ganado!")
    else:
        print(f"{aventurero1.nombre} ha ganado!")

# Iniciar el combate
iniciar_combate()
